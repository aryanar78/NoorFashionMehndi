@{
    ViewData["Title"] = "Price Chart";
}

<div class="price-page">

    <section class="price-hero">
        <h1>Price Chart</h1>
        <p>Transparent & Affordable Pricing</p>
    </section>

    <section class="price-content">

        <h2 class="price-title">Stitching Price Chart</h2>

        <div class="price-card">
            <h3>👗 Simple Dresses</h3>
            <table class="price-table">
                <tr><th>Dress Type</th><th>Price (₹)</th></tr>
                <tr><td>Kurti</td><td>150-350</td></tr>
                <tr><td>Salwar Suit</td><td>250-550</td></tr>
                <tr><td>Plazo Suit</td><td>250-500</td></tr>
            </table>
        </div>

        <div class="price-card">
            <h3>✨ Fancy Dresses</h3>
            <table class="price-table">
                <tr><th>Dress Type</th><th>Price (₹)</th></tr>
                <tr><td>Anarkali</td><td>400-1000</td></tr>
                <tr><td>Sharara</td><td>500-900</td></tr>
                <tr><td>Gown</td><td>500-800</td></tr>
            </table>
        </div>

        <div class="price-card">
            <h3>💍 Wedding Dresses</h3>
            <table class="price-table">
                <tr><th>Dress Type</th><th>Price (₹)</th></tr>
                <tr><td>Bridal Lehenga</td><td>2500</td></tr>
                <tr><td>Heavy Suit</td><td>500-800</td></tr>
                <tr><td>Designer Gown</td><td>900-1500</td></tr>
            </table>
        </div>

        <h2 class="price-title">Mehndi Price Chart</h2>

        <div class="price-card">
            <h3>🌸 Bridal Mehndi</h3>
            <table class="price-table">
                <tr><th>Design</th><th>Price (₹)</th></tr>
                <tr><td>Full Hands & Legs</td><td>5000-7000</td></tr>
                <tr><td>Full Hands</td><td>4000</td></tr>
                <tr><td>Arabic Bridal</td><td>4000</td></tr>
            </table>
        </div>

        <div class="price-card">
            <h3>🎉 Normal & Festival Mehndi</h3>
            <table class="price-table">
                <tr><th>Design</th><th>Price (₹)</th></tr>
                <tr><td>Simple</td><td>300</td></tr>
                <tr><td>Festival</td><td>400-800</td></tr>
                <tr><td>Arabic</td><td>1000</td></tr>
            </table>
        </div>

    </section>

</div>

<style>
  

    .price-page {
        padding: 1px 0;
    }

        /* HERO */
        .price-page .price-hero {
            text-align: center;
            padding: 50px 20px;
            background: linear-gradient(#f7c6d9, #ffe6ef);
        }

            .price-page .price-hero h1 {
                font-size: 34px;
                color: #7a2e5c;
                margin-bottom: 6px;
            }

            .price-page .price-hero p {
                font-size: 16px;
                color: #555;
            }

        /* CONTENT */
        .price-page .price-content {
            max-width: 1100px;
            margin: auto;
            padding: 30px 15px;
        }

        .price-page .price-title {
            text-align: center;
            font-size: 26px;
            color: #7a2e5c;
            margin: 40px 0 25px;
        }

        /* CARDS */
        .price-page .price-card {
            background: #fff;
            padding: 20px;
            margin-bottom: 25px;
            border-radius: 14px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.12);
        }

            .price-page .price-card h3 {
                margin-bottom: 14px;
                color: #c44569;
            }

        /* TABLES (NO NAVBAR IMPACT) */
        .price-page table.price-table {
            width: 100%;
            border-collapse: collapse;
        }

            .price-page table.price-table th {
                background: #f7c6d9;
                color: #4a154b;
                padding: 12px;
                text-align: left;
            }

            .price-page table.price-table td {
                padding: 12px;
                border-bottom: 1px solid #f1c6d9;
            }

            .price-page table.price-table tr:hover {
                background: #fff0f5;
            }

 
</style>